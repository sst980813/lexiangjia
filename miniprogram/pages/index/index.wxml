<!--index.wxml-->

<view class="page-container">
  <navigation-bar title="乐享荟"></navigation-bar>
  
  <!-- 主要内容区域 -->
  <view class="main-content">
    <scroll-view class="scroll-container" scroll-y>
    <!-- Banner区域 -->
    <view class="banner-section">
      <image class="banner-image" src="{{bannerImage}}" mode="aspectFill"></image>
      <view class="banner-overlay">
        <text class="banner-title">享受美好生活</text>
        <text class="banner-subtitle">发现更多精彩旅程</text>
      </view>
    </view>

    <!-- 四个功能按钮 -->
    <view class="function-buttons">
      <view class="button-row">
        <view class="function-btn" bindtap="onButtonTap" data-type="living">
          <view class="btn-icon living-icon">🏡</view>
          <text class="btn-text">旅居养老</text>
        </view>
        <view class="function-btn" bindtap="onButtonTap" data-type="leisure">
          <view class="btn-icon leisure-icon">🌸</view>
          <text class="btn-text">休闲养老</text>
        </view>
      </view>
      <view class="button-row">
        <view class="function-btn" bindtap="onButtonTap" data-type="happy">
          <view class="btn-icon happy-icon">😊</view>
          <text class="btn-text">快乐养老</text>
        </view>
        <view class="function-btn" bindtap="onButtonTap" data-type="member">
          <view class="btn-icon member-icon">💎</view>
          <text class="btn-text">会员权益</text>
        </view>
      </view>
    </view>

    <!-- 旅游列表 -->
    <view class="travel-section">
      <view class="section-header">
        <text class="section-title">热门推荐</text>
        <text class="section-more" bindtap="onViewMore">查看更多 ></text>
      </view>
      <view class="travel-list">
        <view class="travel-item" wx:for="{{travelList}}" wx:key="id" bindtap="onTravelItemTap" data-item="{{item}}">
          <image class="travel-image" src="{{item.image}}" mode="aspectFill"></image>
          <view class="travel-info">
            <text class="travel-title">{{item.title}}</text>
            <text class="travel-location">📍 {{item.location}}</text>
            <view class="travel-meta">
              <text class="travel-price">¥{{item.price}}</text>
              <text class="travel-rating">⭐ {{item.rating}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    </scroll-view>
  </view>

  <!-- 底部菜单栏 -->
  <view class="bottom-tabbar">
    <view class="tab-item {{currentTab === 0 ? 'active' : ''}}" bindtap="onTabTap" data-index="0">
      <view class="tab-icon home-icon">🏠</view>
      <text class="tab-text">首页</text>
    </view>
    <view class="tab-item {{currentTab === 1 ? 'active' : ''}}" bindtap="onTabTap" data-index="1">
      <view class="tab-icon activity-icon">🎉</view>
      <text class="tab-text">活动</text>
    </view>
    <view class="tab-item {{currentTab === 2 ? 'active' : ''}}" bindtap="onTabTap" data-index="2">
      <view class="tab-icon profile-icon">👤</view>
      <text class="tab-text">我的</text>
    </view>
  </view>
</view>
