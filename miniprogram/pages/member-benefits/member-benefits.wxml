<!--member-benefits.wxml-->
<view class="page-container">
  <navigation-bar title="会员权益" color="#8B5A3C" background="#F7E6D3"></navigation-bar>
  
  <!-- 主要内容区域 -->
  <view class="main-content {{safeAreaClass}}" style="{{safeAreaStyle}}">
    <scroll-view class="scroll-container" scroll-y type="list">
      
      <!-- 会员等级介绍 -->
      <view class="membership-intro">
        <view class="intro-header">
          <text class="intro-title">乐享家会员体系</text>
          <text class="intro-subtitle">尊享专属服务，开启品质生活</text>
        </view>
        
        <!-- 三个会员等级 -->
        <view class="membership-levels">
          <!-- 黄金会员 -->
          <view class="level-card gold">
            <view class="level-header">
              <view class="level-icon">🥇</view>
              <text class="level-name">黄金会员</text>
              <text class="level-price">¥99</text>
            </view>
            <view class="level-benefits">
              <view class="benefit-item">
                <text class="benefit-icon">🏠</text>
                <text class="benefit-text">旅居产品 9.5折</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">💊</text>
                <text class="benefit-text">康养产品 9.8折</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">🎁</text>
                <text class="benefit-text">免费江浙沪旅居体验</text>
              </view>
            </view>
          </view>

          <!-- 铂金会员 -->
          <view class="level-card platinum">
            <view class="level-header">
              <view class="level-icon">🥈</view>
              <text class="level-name">铂金会员</text>
              <text class="level-price">¥299</text>
            </view>
            <view class="level-benefits">
              <view class="benefit-item">
                <text class="benefit-icon">🏠</text>
                <text class="benefit-text">旅居产品 9.0折</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">💊</text>
                <text class="benefit-text">康养产品 9.5折</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">🎁</text>
                <text class="benefit-text">免费江浙沪旅居体验</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">🎯</text>
                <text class="benefit-text">专属客服服务</text>
              </view>
            </view>
          </view>

          <!-- 钻石会员 -->
          <view class="level-card diamond">
            <view class="level-header">
              <view class="level-icon">💎</view>
              <text class="level-name">钻石会员</text>
              <text class="level-price">¥999</text>
            </view>
            <view class="level-benefits">
              <view class="benefit-item">
                <text class="benefit-icon">🏠</text>
                <text class="benefit-text">旅居产品 8.5折</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">💊</text>
                <text class="benefit-text">康养产品 9.0折</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">🎁</text>
                <text class="benefit-text">免费江浙沪旅居体验</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">🎯</text>
                <text class="benefit-text">专属客服服务</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">⭐</text>
                <text class="benefit-text">优先预订权</text>
              </view>
              <view class="benefit-item">
                <text class="benefit-icon">🎪</text>
                <text class="benefit-text">专属活动邀请</text>
              </view>
            </view>
          </view>
        </view>
      </view>

      <!-- 特别优惠 -->
      <view class="special-offer">
        <view class="offer-header">
          <text class="offer-title">🎉 新会员专享</text>
        </view>
        <view class="offer-content">
          <text class="offer-text">加入任意等级会员，即可享受一次免费的江浙沪旅居体验！</text>
          <text class="offer-desc">体验包含：住宿、餐饮、景点门票、专业导游服务</text>
        </view>
      </view>

      <!-- 一键入会按钮 -->
      <view class="join-section">
        <button class="join-btn" bindtap="onJoinMembership">
          <text class="join-text">立即加入会员</text>
          <text class="join-arrow">→</text>
        </button>
      </view>

    </scroll-view>
  </view>
</view>
